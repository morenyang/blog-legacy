<% if(post.banner){ %>
<article class="with-bg">
<% } else { %>
<article>
<% } %>
    <%- partial('./nav') %>
    <div class="header-wrapper">
    <% if(post.banner){ %>
        <header class="article-header" <%- 'style="background-image: url(' + post.banner + ')"' %> >
        <div class="header-flow"></div>    
    <% } else {%>
        <header class="article-header">
    <% } %>
            <div class="placeholder"></div>
            <h1 class="article-title">
                <a href="<%- url_for(post.path) %>">
                    <%- post.title %>
                </a>
            </h1>

            <div class="article-meta">
                <p class="article-date">
                    Posted <%- date(post.date, 'MMMM DD YYYY') %>
                </p>
            </section>
        </header>
    </div>

    <section class="article-entry">
        <%- post.content %>
    </section>
    
    <section class="article-comments">
        <div id="gitalk-container"></div>
    </section>
    
    <script src="https://unpkg.com/gitalk/dist/gitalk.min.js"></script>
    <script>
        var gitalk = new Gitalk({
            clientID: '<%= config.gitalk.clientID %>',
            clientSecret: '<%= config.gitalk.clientSecret %>',
            id: (window.location.pathname + '').substring(0,50),
            repo: '<%= config.gitalk.repo %>',
            owner: '<%= config.gitalk.owner %>',
            admin: '<%= config.gitalk.admin %>',
            distractionFreeMode: false
        })
    
        gitalk.render('gitalk-container')
    </script>
</article>
